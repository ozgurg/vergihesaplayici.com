---
import type { Props as HeadProps } from "@/layouts/head.astro";

// oxlint-disable-next-line no-unassigned-import
import "@/assets/css/style.scss";

import Head from "@/layouts/head.astro";
import TinyadzScript from "@/components/tinyadz-script.astro";
import Header from "@/components/header.astro";
import MainBody from "@/components/main-body.vue";
import MainFooter from "@/components/main-footer.vue";

type Props = HeadProps;
const props = Astro.props;

const EXCHANGE_RATES = getExchangeRates();
const BASE_URL = siteUrl();
---

<html
    itemscope=""
    itemtype="https://schema.org/WebSite"
    lang="tr"
    dir="ltr">
<head>
    <Head {...props} />
    <TinyadzScript />
</head>
<body>
    <Header />

    <MainBody>
        <slot name="default" />
    </MainBody>

    <MainFooter EXCHANGE_RATES={EXCHANGE_RATES} />

    <div
        hidden=""
        inert=""
        itemscope=""
        itemtype="https://schema.org/Organization">
        <meta itemprop="url" content={BASE_URL.href} />
        <meta itemprop="logo" content={staticUrl("/pwa/favicon-96x96.png")} />
    </div>
</body>
</html>
