---
import type { Props as BaseLayoutProps } from "@/layouts/base-layout.astro";
import BaseLayout from "@/layouts/base-layout.astro";
import AppHeader from "@/components/app/app-header.astro";
import AppBody from "@/components/app/app-body.vue";
import AppFooter from "@/components/app/app-footer.vue";

type Props = BaseLayoutProps;
const props = Astro.props;

const EXCHANGE_RATES = getExchangeRates();
---

<BaseLayout {...props}>
    <AppHeader />

    <AppBody>
        <slot name="default" />
    </AppBody>

    <AppFooter EXCHANGE_RATES={EXCHANGE_RATES} />
</BaseLayout>
