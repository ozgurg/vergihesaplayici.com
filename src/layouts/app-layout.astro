---
import type { Props as BaseLayoutProps } from "@/layouts/base-layout.astro";
import BaseLayout from "@/layouts/base-layout.astro";
import Header from "@/components/header.astro";
import MainBody from "@/components/main-body.vue";
import MainFooter from "@/components/main-footer.vue";

type Props = BaseLayoutProps;
const props = Astro.props;

const EXCHANGE_RATES = getExchangeRates();
---

<BaseLayout {...props}>
    <Header />

    <MainBody>
        <slot name="default" />
    </MainBody>

    <MainFooter EXCHANGE_RATES={EXCHANGE_RATES} />
</BaseLayout>
